@model athena.AR.Models.LogOnModel

@{
    ViewBag.Title = "Sign in to Athena";
}

@*<h2>@ViewBag.Message</h2> Please enter your user name and password*@

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div style="padding:20px 20% 0 20%;">
<h1>Sign in</h1>
<p><h4>Please sign in to begin using Athena Receivables<h4></p>
</div>

@using (Html.BeginForm()) {
    <div style="padding:1% 35% 12% 35%;">
      @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
       @* <fieldset>*@
            @*<legend></legend>*@
            <br />
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
             <div class="clear" />
          
            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <br />
            <div>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <div class="clear">
                <br />
                <input type="submit" class="metro-button" value="Sign in"/>
            </div>
             
            
            
            <p>
                Don't have an account yet? @Html.ActionLink("Sign up", "Register") here.
            </p>
          
        @*</fieldset>*@
    </div>
 }


