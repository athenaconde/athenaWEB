<script type="text/javascript">
    $(document).ready(function () {
        $('#all').click();
    });

    function getCustomer(s) {
        var view = s;
        $.get(view, function (data) {
            var workspaceWidth = $('#customerWorkspace').width();
            $('#customerWorkspace').empty();
            $('#customerWorkspace').append(data);
            $('#customerWorkspace').addClass('float-right');
            $('#customerWorkspace').css('width', '80%');

            if (view == "/Customer/Create") {
                $('#newCustomer').hide();
            }
            else {
                $('#newCustomer').show();
            }
        });

    };

    function newCustomer() {
        return getCustomer('/Customer/Create');
    };
</script>
 